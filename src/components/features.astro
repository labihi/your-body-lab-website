---
// @ts-ignore
import { Icon } from "astro-icon";

const features = [
  {
    title: "Training programs",
    description:
      "Reach your goals with personalized training programs. We have a wide range of programs for all levels and goals.",
    icon: "bx:bx-dumbbell",
  },
  {
    title: "Useful resources",
    description:
      "We have a wide range of resources to help you achieve your goals. From nutrition to training, we have it all.",
    icon: "bx:bxs-info-circle",
  },
  {
    title: "Always improving",
    description:
      "We are always improving our services and adding new features. We are always open to feedback and suggestions.",
    icon: "bx:bxs-chart",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Why choose us?
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    You are just one click away from your best self. We have everything you need
    to succeed.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
